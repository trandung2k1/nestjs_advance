{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES6",
        "moduleResolution": "Node",
        "sourceMap": true,
        "strictNullChecks": true,
        "strict": true,
        "noImplicitAny": false,
        "outDir": "dist",
        "typeRoots": ["./src/types"],
        "noEmitOnError": true,
        "noImplicitReturns": true
    },
    "lib": ["ES2015"],
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*", "index.d.ts"],
    
}
